<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview_manage_photo"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textview_manage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageview_manage_photo"
        android:layout_toRightOf="@+id/imageview_manage_photo"
        android:text="Name"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorText" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textviev_manage_price"
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_manage_name"
        android:layout_toEndOf="@+id/imageview_manage_photo"
        android:layout_toRightOf="@+id/imageview_manage_photo"
        android:text="price" />

</RelativeLayout>